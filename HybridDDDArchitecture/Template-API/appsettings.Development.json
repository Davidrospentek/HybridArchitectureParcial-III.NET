{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Information"
        },
        "Console": {
            "IncludeScopes": true,
            "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
        },
        "File": {
            "Path": "Logs/game-api-.log",
            "Append": true,
            "MinLevel": "Information",
            "FileSizeLimitBytes": 10485760,
            "MaxRollingFiles": 5
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=localhost;Database=PicasYFamasDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
    },
    "Configurations": {
        "UseDatabase": "SqlServer"
    }
}
